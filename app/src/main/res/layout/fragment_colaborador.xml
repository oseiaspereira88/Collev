                            android:id="@+id/imgSelectTime"
                            android:layout_width="32dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/tvPeriodoOut"
                            app:layout_constraintTop_toTopOf="@+id/tvPeriodoOut"
                            app:layout_constraintVertical_bias="1.0"
                            app:srcCompat="@drawable/icon_history" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ImageView
                        android:id="@+id/imgClickSelectTimeAgendaTutorial"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/icon_hand_click_inclined"
