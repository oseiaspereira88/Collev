                        app:layout_constraintTop_toBottomOf="@+id/textView27">

                        <ImageView
                            android:id="@+id/imgS4"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:layout_constraintBottom_toBottomOf="parent"
